  "components": {
    "schemas": {
      "Comment": {
        "type": "object",
        "required": [
          "comment_id",
          "comment_author",
          "comment_body",
          "schematic_id"
        ],
        "properties": {
          "comment_author": {
            "type": "string",
            "format": "uuid"
          },
          "comment_body": {
            "type": "string"
          },
          "comment_id": {
            "type": "string",
            "format": "uuid"
          },
          "schematic_id": {
            "type": "string"
          }
        }
      },
      "CommentBuilder": {
        "type": "object",
        "required": [
          "comment_body"
        ],
        "properties": {
          "comment_body": {
            "type": "string"
          }
        }
      },
      "FullComment": {
        "type": "object",
        "required": [
          "comment_id",
          "comment_author",
          "comment_body",
          "schematic_id",
          "author_username"
        ],
        "properties": {
          "author_username": {
            "type": "string"
          },
          "comment_author": {
            "type": "string",
            "format": "uuid"
          },
          "comment_body": {
            "type": "string"
          },
          "comment_id": {
            "type": "string",
            "format": "uuid"
          },
          "schematic_id": {
            "type": "string"
          }
        }
      },
      "FullTag": {
        "type": "object",
        "required": [
          "tag_id",
          "tag_name"
        ],
        "properties": {
          "tag_id": {
            "type": "integer",
            "format": "int64"
          },
          "tag_name": {
            "type": "string"
          }
        }
      },
      "LikeAction": {
        "type": "string",
        "enum": [
          "like",
          "dislike"
        ]
      },
      "LikeQuery": {
        "type": "object",
        "properties": {
          "action": {
            "allOf": [
              {
                "$ref": "#/components/schemas/LikeAction"
              }
            ],
            "nullable": true
          }
        }
      },
      "PaginationQuery": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer",
            "format": "int64",
            "nullable": true
          },
          "offset": {
            "type": "integer",
            "format": "int64",
            "nullable": true
          }
        }
      },
      "Schematic": {
        "type": "object",
        "required": [
          "schematic_id",
          "schematic_name",
          "game_version_id",
          "create_version_id",
          "author",
          "downloads"
        ],
        "properties": {
          "author": {
            "type": "string",
            "format": "uuid"
          },
          "create_version_id": {
            "type": "integer",
            "format": "int32"
          },
          "downloads": {
            "type": "integer",
            "format": "int64"
          },
          "game_version_id": {
            "type": "integer",
            "format": "int32"
          },
          "schematic_id": {
            "type": "string",
            "format": "uuid"
          },
          "schematic_name": {
            "type": "string"
          }
        }
      },
      "SchematicBuilder": {
        "type": "object",
        "required": [
          "schematic_name",
          "game_version",
          "create_version"
        ],
        "properties": {
          "create_version": {
            "type": "integer",
            "format": "int32",
            "description": "The id of the create version of the new schematic\n",
            "example": 8,
            "minimum": 1
          },
          "game_version": {
            "type": "integer",
            "format": "int32",
            "description": "The id of the game version of the new schematic\n",
            "example": 4,
            "minimum": 1
          },
          "schematic_name": {
            "type": "string",
            "description": "The name of the new schematic\n",
            "maxLength": 50,
            "minLength": 3
          }
        }
      },
      "SearchQuery": {
        "type": "object",
        "required": [
          "term"
        ],
        "properties": {
          "limit": {
            "type": "integer",
            "format": "int64",
            "description": "The maximum number of schematics to fetch. If this is not\nprovided it will default to 20. No more than 50 schematics\ncan be fetched at once.\n",
            "example": 20,
            "nullable": true,
            "maximum": 50,
            "minimum": 0
          },
          "offset": {
            "type": "integer",
            "format": "int64",
            "description": "The page of schematics to fetch from. If this is not provided\nit will default to page 0 (no offset).\n",
            "example": 0,
            "nullable": true,
            "minimum": 0
          },
          "sort": {
            "allOf": [
              {
                "$ref": "#/components/schemas/SortBy"
              }
            ],
            "nullable": true
          },
          "tag_ids": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int64"
            },
            "description": "The tags to fetch from, only schematics with all of these tags\nwill fetched.\n",
            "nullable": true
          },
          "term": {
            "type": "string",
            "description": "The term to search schematics for. Both schematic names and\ndescriptions will be matched agaisnt the this term.\n",
            "example": "test"
          }
        }
      },
      "Tags": {
        "type": "object",
        "required": [
          "tag_names"
        ],
        "properties": {
          "tag_names": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int64"
            }
          }
        }
      },
      "UpdateComment": {
        "type": "object",
        "properties": {
          "comment_body": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "UpdateSchematic": {
        "type": "object",
        "properties": {
          "create_version": {
            "type": "integer",
            "format": "int32",
            "description": "The id of the new create version of the schematic\n",
            "example": 8,
            "nullable": true,
            "minimum": 1
          },
          "game_version": {
            "type": "integer",
            "format": "int32",
            "description": "The id of the new game version of the schematic\n",
            "example": 4,
            "nullable": true,
            "minimum": 1
          },
          "schematic_name": {
            "type": "string",
            "description": "The new name for the schematic\n",
            "nullable": true,
            "maxLength": 50,
            "minLength": 3
          }
        }
      },
      "UpdateUser": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "My new username",
            "nullable": true,
            "maxLength": 20,
            "minLength": 3
          }
        }
      },
      "User": {
        "type": "object",
        "required": [
          "user_id",
          "username",
          "permissions",
          "email"
        ],
        "properties": {
          "email": {
            "type": "string",
            "example": "email@email.com"
          },
          "permissions": {
            "type": "integer",
            "format": "int64",
            "example": 7,
            "minimum": 0
          },
          "user_id": {
            "type": "string",
            "format": "uuid"
          },
          "username": {
            "type": "string",
            "example": "My username",
            "maxLength": 20,
            "minLength": 3
          }
        }
      }
    },
    "securitySchemes": {
      "session_cookie": {
        "type": "apiKey",
        "in": "cookie",
        "name": "session"
      }
    }
  }
}